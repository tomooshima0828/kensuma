<% provide(:title, "発注登録") %>
<% provide(:btn_text, "登録") %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @order, url: users_orders_path, method: :post, local: true, class: "order-form" do |f| %>
      <%= render partial: "form", locals: { f: f, order: @order } %>
      
      <%= f.submit yield(:btn_text), class: "btn btn-md btn-block btn-primary" %>
      <%= link_to "一覧画面へ", users_orders_path, class: "btn btn-md btn-block btn-default" %>
    <% end %>
  </div>
</div>
