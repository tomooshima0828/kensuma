<% provide(:title, "発注依頼詳細") %>

<div class="card">
  <div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
      <tbody>
        <tr>
          <th><%= RequestOrder.human_attribute_name(:status) %></th>
          <td><%= @request_order.status_i18n %></td>
        </tr>
        <tr>
          <th><%= Business.human_attribute_name(:name) %></th>
          <td><%= @request_order.business.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to "下請けに書類作成を依頼する", new_users_request_order_sub_request_order_path(@request_order), class: "btn btn-md btn-block btn-outline-primary" %>
    <%= link_to "一覧画面へ", users_request_orders_path, class: "btn btn-md btn-block btn-default" %>
    <%= link_to "書類一覧画面へ", users_request_order_documents_path(@request_order), class: "btn btn-md btn-block btn-default" unless @request_order.parent_id.present? %>
  </div>
</div>
<%= @request_order.parent_id %>
<%= @request_order.id %>